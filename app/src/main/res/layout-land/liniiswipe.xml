<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/liniiTramvai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <TextView
            android:text="Linii tramvai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:textSize="20dp"
            android:textColor="#4A7023"  />

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/tram1"
            />

        <Spinner
            android:layout_marginTop="20dp"
            android:id="@+id/tramvai_spinner"
            android:paddingTop="10dp"
            android:layout_width="100dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_height="wrap_content">

        </Spinner>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/liniiTroleibuz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <TextView
            android:text="Linii troleibuz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:textSize="20dp"
            android:textColor="#4A7023"  />

        <ImageView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/troleibuz"
            />

        <Spinner
            android:layout_marginTop="30dp"
            android:id="@+id/troleibuz_spinner"
            android:paddingTop="10dp"
            android:layout_width="100dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_height="wrap_content">

        </Spinner>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/liniiAutobuz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <TextView
            android:text="Linii autobuz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:textSize="20dp"
            android:textColor="#4A7023"  />

        <ImageView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/bus"
            />

        <Spinner
            android:layout_marginTop="30dp"
            android:id="@+id/bus_spinner"
            android:paddingTop="10dp"
            android:layout_width="100dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_height="wrap_content">

        </Spinner>


    </LinearLayout>

</LinearLayout>