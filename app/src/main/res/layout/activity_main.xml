<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/drum"
    tools:context=".MainActivity"
 >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="80dp"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_gravity="center"
        android:weightSum="1">

        <TextView

        android:text="RATB Planificator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:textSize="28dp"
        android:textColor="#5e7974" />

        <TextView

            android:text="Calatoreste inteligent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textStyle="italic|bold"
            android:typeface="sans"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:textSize="28dp"
            android:textColor="#5e7974" />

        <Button android:id="@+id/formulare_button"
            android:layout_width="400dp"
            android:layout_height="90dp"
            android:text="Planificator"
            android:shadowRadius="1.2"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonstyle"
            android:onClick="afiseazaFormular"
            />

        <Button
            android:layout_width="400dp"
            android:layout_height="90dp"
            android:textSize="18dp"
            android:text="Statii"
            android:textColor="#ffffff"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/buttonstyle"
            android:layout_marginTop="20dp"

            android:onClick="afiseazaStatii"
            />

        <Button
            android:layout_width="400dp"
            android:layout_height="90dp"
            android:textSize="18dp"
            android:text="Linii"
            android:textColor="#ffffff"
            android:shadowColor="#eb3c46"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonstyle"
            android:onClick="afiseazaLinii"
            />

        <ImageView
            android:layout_marginTop="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/bustop2"
            />

    </LinearLayout>

</FrameLayout>